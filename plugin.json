{
    "version": "4.0.0",
    "title": "Moondeer's Cards",
    "description": "Injects Twitter/Open Graph card meta data, structured data for search engines, and contains Javascript for generating preview cards for links inside list and post pages.",
    "includes": [
        "twitter-open-graph-cards.html",
        "structured-data-injection.html",
        "cardify-script-injection.html"
    ],
    "fields": [
        {
          "field": "params.cards_enable_twitter_og_cards",
          "label": "Enable Twitter / Open Graph Cards",
          "placeholder": "true"
        },
        {
          "field": "params.cards_twitter_username",
          "label": "Twitter Username",
          "placeholder": ""
        },
        {
          "field": "params.cards_data",
          "label": "Card Data (JSON)",
          "placeholder": ""
        },
        {
          "field": "params.cards_query_match_cards",
          "label": "Query Match Cards",
          "placeholder": "true"
        },
        {
          "field": "params.cards_host_match_cards",
          "label": "Host Match Cards",
          "placeholder": "false"
        },
        {
          "field": "params.cards_read_more_link_selector",
          "label": "CSS Selector for 'Read more' links",
          "placeholder": ".read-more"
        },
        {
          "field": "params.cards_host_match_list_sandbox_selector",
          "label": "CSS Selector for Location of Host Match Cardification in List Pages",
          "placeholder": ".post-body"
        },
        {
          "field": "params.cards_host_match_page_sandbox_selector",
          "label": "CSS Selector for Location of Host Match Cardification in Post Pages",
          "placeholder": "#post-body"
        },
        {          
          "field": "params.cards_custom_host_match_selector",
          "label": "Custom CSS Selector for Host Match Cardification",
          "placeholder": ""
        },
        {
          "field": "params.cards_enable_structured_data",
          "label": "Enable Structured Data",
          "placeholder": "true"
        },
        {
          "field": "params.cards_structured_data_author_name",
          "label": "Author Name",
          "placeholder": "[FULLNAME]"
        },
        {
          "field": "params.cards_structured_data_author_profile_url",
          "label": "Author Profile URL",
          "placeholder": "[SCHEME]://[HOSTNAME]/about/"
        },
        {
          "field": "params.cards_cardify_card_spacer_y",
          "label": "Card Spacer (Vertical)",
          "placeholder": "1rem"
        },
        {
          "field": "params.cards_cardify_card_spacer_x",
          "label": "Card Spacer (Horizontal)",
          "placeholder": "1rem"
        },
        {
          "field": "params.cards_cardify_card_title_spacer_y",
          "label": "Card Title Spacer (Vertical)",
          "placeholder": "1rem * 0.5"
        },
        {
          "field": "params.cards_cardify_card_bg",
          "label": "Card Background Color",
          "placeholder": "white"
        },
        {
          "field": "params.cards_cardify_card_border_width",
          "label": "Card Border Width",
          "placeholder": "1px"
        },
        {
          "field": "params.cards_cardify_card_border_color",
          "label": "Card Border Color",
          "placeholder": "rgba(black, .125)"
        },
        {
          "field": "params.cards_cardify_card_border_radius",
          "label": "Card Border Radius",
          "placeholder": "0.25rem"
        },
        {
          "field": "params.cards_cardify_card_inner_border_radius",
          "label": "Card Inner Border Radius",
          "placeholder": "0.25rem"
        }       
    ]
  }