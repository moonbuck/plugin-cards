{
  "version": "4.0.10",
  "title": "Moondeer's Cards",
  "description": "Injects Twitter/Open Graph card meta data, structured data for search engines, and contains Javascript for generating preview cards for links inside list and post pages.",
  "includes": ["plugin_cards/injection.html"],
  "fields": [
    {
      "field": "params.Cards.TwitterOG.Enable",
      "label": "Enable Twitter / Open Graph Cards",
      "placeholder": "true"
    },
    {
      "field": "params.Cards.TwitterOG.Data",
      "label": "Card Data (JSON)",
      "placeholder": "use of data file recommmended (see README for instruction)"
    },
    {
      "field": "params.Cards.TwitterOG.Video.Width",
      "label": "Card Video Width",
      "placeholder": "600"
    },
    {
      "field": "params.Cards.TwitterOG.Video.Height",
      "label": "Card Video Height",
      "placeholder": "338"
    },
    {
      "field": "params.Cards.TwitterOG.Video.Type",
      "label": "Default og:type for Video Tags",
      "placeholder": "video.other"
    },
    {
      "field": "params.Cards.TwitterOG.Audio.Width",
      "label": "Twitter Player Card Width (Audio)",
      "placeholder": "338"
    },
    {
      "field": "params.Cards.TwitterOG.Audio.Height",
      "label": "Twitter Player Card Height (Audio)",
      "placeholder": "338"
    },
    {
      "field": "params.Cards.TwitterOG.Audio.Type",
      "label": "Default og:type for Audio Tags",
      "placeholder": "music.song"
    },
    {
      "field": "params.Cards.TwitterOG.Twitter.Username",
      "label": "Twitter Username",
      "placeholder": ""
    },
    {
      "field": "params.Cards.TwitterOG.Twitter.CardPreference.SinglePage",
      "label": "Twitter Card Preference (Single Page)",
      "placeholder": "large"
    },
    {
      "field": "params.Cards.TwitterOG.Twitter.CardPreference.ListPage",
      "label": "Twitter Card Preference (List Page",
      "placeholder": "small"
    },
    {
      "field": "params.Cards.TwitterOG.Twitter.CardPreference.LargeSummaryRequiresImage",
      "label": "Require an Image for Large Summaries",
      "placeholder": "true"
    },
    {
      "field": "params.Cards.StructuredData.Enable",
      "label": "Enable Structured Data",
      "placeholder": "true"
    },
    {
      "field": "params.Cards.StructuredData.AuthorName",
      "label": "Author Name",
      "placeholder": "[FULLNAME]"
    },
    {
      "field": "params.Cards.StructuredData.ProfileURL",
      "label": "Profile URL",
      "placeholder": "[SCHEME]://[HOSTNAME]/about/"
    },
    {
      "field": "params.Cards.Cardify.Card.Creation.QueryMatch",
      "label": "Query Match",
      "placeholder": "true"
    },
    {
      "field": "params.Cards.Cardify.Card.Creation.QueryParameter",
      "label": "Query Parameter",
      "placeholder": "cardify"
    },
    {
      "field": "params.Cards.Cardify.Card.Creation.QueryMatchOverridesFilter",
      "label": "Query Match Overrides Filter",
      "placeholder": "true"
    },
    {
      "field": "params.Cards.Cardify.Card.Creation.HostMatch",
      "label": "Host Match",
      "placeholder": "false"
    },
    {
      "field": "params.Cards.Cardify.Card.HostMatch.ReadMoreLink",
      "label": "CSS Selector for 'Read more' links",
      "placeholder": ".read-more"
    },
    {
      "field": "params.Cards.Cardify.Card.HostMatch.ListSandbox",
      "label": "CSS Selector for Location of Host Match Cardification in List Pages",
      "placeholder": ".post-body"
    },
    {
      "field": "params.Cards.Cardify.Card.HostMatch.PageSandbox",
      "label": "CSS Selector for Location of Host Match Cardification in Post Pages",
      "placeholder": "#post-body"
    },
    {
      "field": "params.Cards.Cardify.Card.HostMatch.URLFilter",
      "label": "Host Match URL Filter",
      "placeholder": ".*.html"
    },
    {      
      "field": "params.Cards.Cardify.Card.HostMatch.CustomSelector",
      "label": "Custom CSS Selector for Host Match Cardification",
      "placeholder": ""
    },
    {
      "field": "params.Cards.Cardify.Card.Style.SpacerY",
      "label": "Card Spacer (Vertical)",
      "placeholder": "1rem"
    },
    {
      "field": "params.Cards.Cardify.Card.Style.SpacerX",
      "label": "Card Spacer (Horizontal)",
      "placeholder": "1rem"
    },
    {
      "field": "params.Cards.Cardify.Card.Style.TitleSpacerY",
      "label": "Card Title Spacer (Vertical)",
      "placeholder": "1rem * 0.5"
    },
    {
      "field": "params.Cards.Cardify.Card.Style.BG",
      "label": "Card Background Color",
      "placeholder": "white"
    },
    {
      "field": "params.Cards.Cardify.Card.Style.BorderWidth",
      "label": "Card Border Width",
      "placeholder": "1px"
    },
    {
      "field": "params.Cards.Cardify.Card.Style.BorderColor",
      "label": "Card Border Color",
      "placeholder": "rgba(black, .125)"
    },
    {
      "field": "params.Cards.Cardify.Card.Style.BorderRadius",
      "label": "Card Border Radius",
      "placeholder": "0.25rem"
    },
    {
      "field": "params.Cards.Cardify.Card.Style.TimeDateColor",
      "label": "Card Publish Date and Reading Time Color",
      "placeholder": "#666666"
    },
    {
      "field": "params.Cards.Cardify.Build.Fingerprint",
      "label": "Fingerprint Generated Files",
      "placeholder": "true"
    },
    {
      "field": "params.Cards.Cardify.Build.SassOutput",
      "label": "Sass Output Style",
      "placeholder": "compressed"
    },
    {
      "field": "params.Cards.Cardify.Build.MinifyScript",
      "label": "Minify Javascript File",
      "placeholder": "true"
    }     
  ]
}
